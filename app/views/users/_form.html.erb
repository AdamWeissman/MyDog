<%= form_for @user, controller: 'users', action: 'create' do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.number_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <p>preferred contact method:</p>
    <p>
      <%= form.radio_button :contact_method, "text" %>
      <%= form.label :contact_method, 'text' %>
      <%= form.radio_button :contact_method, "email" %>
      <%= form.label :contact_method, 'email' %>
   </p>
  </div>

  <div class="field">
    <%= form.hidden_field(:admin, :value => "false") %>
  </div>
  <br>

  <div class="actions">
    <p>
      <br>
    <%= form.submit %>
    </p>
  </div>
<% end %>
