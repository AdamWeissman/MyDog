<p id="notice"><%= notice %></p>

<h1>dashboard</h1>

<p>
  <strong>Name:</strong>
<%= link_to @user.name, edit_user_path(@user) %>
</p>

<p>
  <strong>Email:</strong>
  <%= mail_to @user.email, @user.email, subject: "a note from local pet clinic" %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @user.phone_number %>
</p>

<p>
  <strong>Contact method:</strong>
  <%= @user.contact_method %>
</p>

<h1>My Pet Info</h1>

<table class="darkTable">
  <thead>
  <tr>
    <th>Pet Name</th>
    <th>Type</th>
    <th>Breed</th>
    <th>Veterinarian</th>
    <th colspan="3">links</th>
  </tr>
  <tbody>
    <tr>
      <% @user.pets.each do |pet| %>
      <td><%= link_to pet.name, pet %></td>
      <td><%= pet.dog_cat %></td>
      <td><%= pet.breed %></td>
      <td><%= pet.veterinarian.name %></td>
      <td><%= link_to 'Show', pet %></td>
      <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
      <td><%= link_to 'Destroy',pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
        <% end %>
  </tbody>
</table>