<%= form_with(model: owner, local: true) do |form| %>
  <% if owner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
        <% owner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.number_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password_digest %>
  </div>

  <div class="field">
    <p>preferred contact method:</p>
    <p>
      <%= form.radio_button :contact_method, "text" %>
      <%= form.label :contact_method, 'text' %>
      <%= form.radio_button :contact_method, "email" %>
      <%= form.label :contact_method, 'email' %>
   </p>
  </div>
  <br>

  <div class="field">
    <br>
    <p>
      <%= form.label :admin %>
      <%= form.check_box :admin %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
