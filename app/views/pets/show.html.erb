<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @pet.dog_cat %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Veterinarian:</strong>
  <%= @pet.veterinarian.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @pet.user.name %>
</p>

<p>
  <strong>Medications:</strong>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>dose</th>
        <th>instructions</th>
        <th>request refill</th>
        <% if current_user.admin %>
          <th>contact method</th>
          <th>refill ready</th>

        <% end %>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @pet.meds.each do |med| %>
          <td><%= med.name %></td>
          <td><%= med.dose %></td>
          <td><%= med.instructions %></td>
          <td><%= mail_to "admin@mydog.com", "admin@mydog.com", subject: "#{@pet.user.name} refill request", body: "Refill request for: #{@pet.user.name}, pet #{@pet.name}  #{med.name}  #{med.dose} #{med.instructions} " %></td>
          <td align="center"><%= @pet.user.contact_method %></td>
          <% if current_user.admin %>
            <% if @pet.user.contact_method == "email" %>
              <td><%= mail_to "#{@pet.user.email}", current_user.email, subject: "#{@pet.name}'s Rx is ready", body: "come pick up your Rx"  %></td>
            <% else %>
              <td><%= link_to @pet.user.phone_number, sms_path(pet_id: @pet.id, pet_name: @pet.name, phone_number: @pet.user.phone_number, med_name: med.name) %></td>
            <% end %>
          <% end %>
      </tr>
    <% end %>
   </tbody>
  </table>
</p>

<%= link_to 'Add Medication', new_med_path %> |
<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %> |
