<p id="notice"><%= notice %></p>

<div class="container">

  <h1>pets</h1>

  <table class="darkTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Breed</th>
        <th>Veterinarian</th>
        <th>Owner</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.dog_cat %></td>
          <td><%= pet.breed %></td>
          <td><%= pet.veterinarian.name %></td>
          <td><%= pet.user.name %></td>
          <td><%= link_to 'Show', pet %></td>
          <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><br></p>
  <br>
  <p><br></p>

  <div class="navbar bottom">
    <%= link_to 'new pet', new_pet_path %>
  </div>

</div>
